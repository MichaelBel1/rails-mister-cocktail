<div class="container">
      <h1>Cocktails</h1>


      <div class="row">
        <% @cocktails.each do |cocktail| %>
            <div class="col-xs-12 col-sm-4">
              <div class="card"
                style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                       url('<%= cl_image_path cocktail.photo ? cocktail.photo.path : 'ep8end5dwrv4ajrkjywu', height: 300, width: 400, crop: :fit %>')">
                <div class="card-category">Popular</div>
                <div class="card-description">
                  <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
                  <%= link_to "Delete this cocktail", cocktail_path(cocktail), method: :delete %> ||
                  <%= link_to "Add a new dose", new_cocktail_dose_path(cocktail) %>
                </div>
              </div>
            </div>
        <% end %>
       </div>
</div>

